<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Titre -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Inscription"
        android:id="@+id/textViewInscription"
        android:gravity="center"
        android:textSize="35dp"
        android:textColor="#FFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <!-- Login -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextLogin"
        android:hint="Login"
        android:textColor="#FFF"
        android:layout_below="@+id/textViewInscription"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <!-- Mot de passe -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextPwd"
        android:hint="Password"
        android:password="true"
        android:textColor="#FFF"
        android:layout_below="@+id/editTextLogin"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <!--Nom -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextNom"
        android:hint="Nom"
        android:textColor="#FFF"
        android:layout_below="@+id/editTextPwd"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <!-- Prenom -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editTextPrenom"
        android:hint="PrÃ©nom"
        android:textColor="#FFF"
        android:layout_below="@+id/editTextNom"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <!-- Date de naissance -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/editTextDateDeNaissance"
        android:hint="Date de naissance"
        android:layout_below="@+id/editTextPrenom"
        android:layout_alignParentStart="true"
        android:textColor="#FFF"
        android:layout_marginTop="20dp" />

    <!-- Adresse -->
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextAdresse"
        android:hint="Adresse"
        android:textColor="#FFF"
        android:layout_below="@+id/editTextDateDeNaissance"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <!-- Valider -->
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:id="@+id/buttonValider"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>